<apex:page id="BiblicaStandardReceiptPortalUsersPDF" controller="DocumentGenerationController" action="{!processDocuments}" renderas="advanced_pdf"
  showHeader="false" sideBar="false" cache="false" applyHtmlTag="false" readOnly="false" standardStylesheets="false" applyBodyTag="false">
  <html>

    <head>
      <title>Thank You</title>
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
      <style type="text/css">
        .hidable:empty {
          display: none;
        }
        @page {
          margin: 0 0 0 0;
        }
        body, html {
          margin:0px;
          padding:0px;
          font-family: sans-serif;
          font-size:9pt;
          line-height: 12px;
          color:#111111;
        }
        h1 {
          font-size: 20px;
        }
      </style>
    </head>
    <apex:variable var="count" value="{!1}"/>
    
    <body>
      <apex:repeat value="{!documents}" var="rec">
      <div style="height: 75px; background-color: #044f7a; width: 100% !important; color: #ffffff; text-align: center; font-size: 30px;">
        <p>REPRINT</p>
      </div>
      <table style="padding-top: 20px; padding-left: .75in;">
        <tr style="width: 100%;">
          <td style="width: 700px;">
            <h1>Biblica - The International Bible Society</h1>
            <table>
              <tr>
                <td style="width: 50%; font-size: 13px; padding: 2px 30px 2px 0;">1820 Jet Stream Drive</td>
                <td style="width: 50%; font-size: 13px; padding: 2px 30px 2px 0;">Contact Donor Services</td>
              </tr>
              <tr>
                <td style="width: 50%; font-size: 13px; padding: 2px 30px 2px 0;">Colorado Springs, CO 80921</td>
                <td style="width: 50%; font-size: 13px; padding: 2px 30px 2px 0;">M-F 8:00am-4:30pm MT</td>
              </tr>
              <tr>
                <td style="width: 50%; font-size: 13px; padding: 2px 30px 2px 0;">United States</td>
                <td style="width: 50%; font-size: 13px; padding: 2px 30px 2px 0;">+1(800)987-3595</td>
              </tr>
            </table>
          </td>
          <td style="width: 30%; text-align: right; padding-right: .75in;">
            <apex:image id="biblica-logo" value="{!$Resource.BiblicaLogoCircle}" width="120" height="120"/>    
          </td>
        </tr>
      </table>
      
      <table style="padding-left: .75in; padding-top: 10px;">
        <tr>
          <td style="width: 600px; text-align: left;">
            <h1 style="color: #666666; font-size: 13px;" >BILLED TO</h1>
            <p style="font-size: 13px; margin: 0; line-height: 16px;">
              <apex:outputText value="{!rec['primaryRecord']['Donor_Portal_Receipt_Address__c']}" style="white-space:pre;" escape="false"/>
            </p>
          </td>
        </tr>
      </table>  

        <table style="padding-left: .75in; padding-top: 15px;">
          <tr>
            <td style="width: 2.5in;">
              <h1>Receipt</h1>
              <h1 style="color: #666666; padding-top: 10px; font-size: 13px;" >TRANSACTION NUMBER</h1>
              <p style="font-size: 13px;">{!rec['primaryRecord']['Transaction_Number__c']}</p>
              <h1 style="color: #666666; padding-top: 10px; font-size: 13px;" >ACCOUNT NUMBER</h1>
              <p style="font-size: 13px;">{!rec['primaryRecord']['Donor_Portal_Receipt_Account_Number__c']}</p>
              <h1 style="color: #666666; padding-top: 10px; font-size: 13px;" >PROCESSING DATE</h1>
              <p style="font-size: 13px;"><apex:outputText value="{0,date,MM/dd/YYYY}">
                <apex:param value="{!rec['primaryRecord']['Close_Date__c']}"/></apex:outputText></p> 
            </td>
            <td style="width: 4.5in;">
              <table style="position: absolute; top: 3.5in; left: 3.25in;">
                <tr style="background-color: #54aeff; height: 30px !important; color: #ffffff;">
                  <th style="width: 3in; padding: 5px;">FUND</th>
                  <th style="width: 1.5in; padding: 5px;">AMOUNT</th>
                </tr>
                <tr style="background-color: #ebebeb; height: 30px;">
                  <td style="font-size: 13px; padding: 5px;">{!rec['primaryRecord']['npsp__General_Accounting_Unit__r.Name']}</td>
                  <td style="font-size: 13px; padding: 5px;">{!rec['primaryRecord']['Donor_Portal_Receipt_Amount__c']}</td>
                </tr>
                <tr style="background-color: #ebebeb; height: 30px;">
                  <td style="font-size: 13px; padding: 5px;">Processing Fees</td>
                  <td style="font-size: 13px; padding: 5px;">{!rec['primaryRecord']['Donor_Portal_Receipt_Processing_Fees__c']}</td>
                </tr>
              </table>
              <table style="position: absolute; top: 5in; left: 3.25in; width: 4.5in;">
                <tr>
                  <td style="width: 3in; padding: 5px; text-align: right; color: #666666; font-weight: 600; font-size: 13px;">TOTAL</td>
                  <td style="font-size: 13px; padding-left: 5px;">{!rec['primaryRecord']['Total_Opportunity_Amount__c']}</td>
                </tr>
                <tr><td>&nbsp;</td><td>&nbsp;</td></tr>
                <tr>
                  <td style="width: 3in; padding: 5px; text-align: right; color: #666666; font-weight: 600; font-size: 13px;">PAYMENT METHOD</td>
                  <td style="font-size: 13px; padding-left: 5px;">{!rec['primaryRecord']['Payment_Method__c']}</td>
                </tr>
                <tr>
                  <td style="width: 3in; padding: 5px; text-align: right; color: #666666; font-weight: 600; font-size: 13px;">NAME ON CARD</td>
                  <td style="font-size: 13px; padding-left: 5px;">{!rec['primaryRecord']['Donor_Portal_Receipt_Recipient_Formal__c']}</td>
                </tr>
              </table>
            </td>
          </tr>
        </table>  

        <table style="padding-left: .75in; padding-right: .75in; padding-top: 1.5in; width: 100%">
          <tr style="width: 100%; font-size: 13px; line-height: 15px;">
            <td>
                Donations to Biblica are tax deductible to the extent allowed by law. Unless specifically noted, no goods or services were received in exchange for the gift referenced above. We will not sell, rent, trade, or loan for any purpose the names and addresses of current donors.
            </td>
          </tr>
        </table>  

        <div style="height: 1.75in; background-color: #044f7a; width: 100% !important; position: absolute; top: 9.25in;"></div>
          
      </apex:repeat>
    </body>
  </html>
</apex:page>